<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="350dp"
            android:orientation="vertical">

            <ImageView
                android:id="@+id/imagesach_tt"
                android:layout_width="260dp"
                android:layout_height="match_parent"
                android:layout_gravity="center" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <TextView
                android:id="@+id/textView1"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="10"
                android:background="@color/mauList"
                android:gravity="center_vertical"
                android:paddingBottom="5dp"
                android:paddingLeft="8dp"
                android:paddingTop="5dp"
                android:text="Thông tin sách"
                android:textAppearance="@style/CustomText"
                android:textColor="#000000"
                android:textStyle="bold" />


            <TextView
                android:id="@+id/txttensach_tt"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="10"
                android:background="@color/mauList"
                android:drawableLeft="@drawable/ic_bool"
                android:gravity="center_vertical"
                android:paddingBottom="5dp"
                android:paddingLeft="8dp"
                android:paddingTop="5dp"
                android:text="Tên sách:"
                android:textAppearance="@style/CustomText"
                android:textColor="#000000" />

            <TextView
                android:id="@+id/txtloai_tt"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="10"
                android:background="@color/mauList"
                android:drawableLeft="@drawable/ic_type"
                android:gravity="center_vertical"
                android:paddingBottom="5dp"
                android:paddingLeft="8dp"
                android:paddingTop="5dp"
                android:text="Loại"
                android:textAppearance="@style/CustomText"
                android:textColor="#000000" />
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:weightSum="2">

                <TextView
                    android:id="@+id/txtsoluon_tt"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:background="@color/mauList"
                    android:drawableLeft="@drawable/ic_soluong"
                    android:gravity="center_vertical"
                    android:paddingBottom="5dp"
                    android:paddingLeft="8dp"
                    android:paddingTop="5dp"
                    android:text="Số Lượng"
                    android:textAppearance="@style/CustomText"
                    android:textColor="#000000" />

                <TextView
                    android:id="@+id/txtngaynnhap_tt"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:background="@color/mauList"
                    android:drawableLeft="@drawable/ic_date"
                    android:gravity="center_vertical"
                    android:paddingBottom="5dp"
                    android:paddingLeft="8dp"
                    android:paddingTop="5dp"
                    android:text="Ngày Nhập"
                    android:textAppearance="@style/CustomText"
                    android:textColor="#000000" />

            </LinearLayout>

            <TextView
                android:id="@+id/txttacgia_tt"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="10"
                android:background="@color/mauList"
                android:drawableLeft="@drawable/ic_tacgia"
                android:gravity="center_vertical"
                android:paddingBottom="5dp"
                android:paddingLeft="8dp"
                android:paddingTop="5dp"
                android:text="Tác giả"
                android:textAppearance="@style/CustomText"
                android:textColor="#000000" />

            <TextView
                android:id="@+id/txtvitri_tt"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="10"
                android:background="@color/mauList"
                android:drawableLeft="@drawable/ic_location"
                android:gravity="center_vertical"
                android:paddingBottom="5dp"
                android:paddingLeft="8dp"
                android:paddingTop="5dp"
                android:text="Vị Trí"
                android:textAppearance="@style/CustomText"
                android:textColor="#000000" />
            <TextView
                android:id="@+id/txttien_tt"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="10"
                android:background="@color/mauList"
                android:drawableLeft="@drawable/ic_tien"
                android:gravity="center_vertical"
                android:paddingBottom="5dp"
                android:paddingLeft="8dp"
                android:paddingTop="5dp"
                android:text="Tiền thuê"
                android:textAppearance="@style/CustomText"
                android:textColor="#000000" />



        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="horizontal"
            android:weightSum="2"
            android:background="#FFEFEFEF">

            <Button
                android:id="@+id/btnxoa_tt"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="Xóa" />

            <Button
                android:id="@+id/btnsua_tt"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="Sửa" />
        </LinearLayout>
    </LinearLayout>
</ScrollView>